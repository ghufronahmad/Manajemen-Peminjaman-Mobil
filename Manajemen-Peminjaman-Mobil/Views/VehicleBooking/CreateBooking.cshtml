@model Manajemen_Peminjaman_Mobil.Models.VehicleBooking

@{
    ViewData["Title"] = "Create Vehicle Booking";
}

<h2>Create Vehicle Booking</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="VehicleId" class="control-label">Vehicle</label>
        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Durasi" class="control-label">Durasi</label>
        <input asp-for="Durasi" class="form-control" />
        <span asp-validation-for="Durasi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Keperluan" class="control-label">Keperluan</label>
        <input asp-for="Keperluan" class="form-control" />
        <span asp-validation-for="Keperluan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tanggal" class="control-label">Tanggal</label>
        <input asp-for="Tanggal" class="form-control" type="date" />
        <span asp-validation-for="Tanggal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartMiningId" class="control-label">Asal (Start Mining)</label>
        <select asp-for="StartMiningId" class="form-control" asp-items="ViewBag.Minings"></select>
        <span asp-validation-for="StartMiningId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndMiningId" class="control-label">Tujuan (End Mining)</label>
        <select asp-for="EndMiningId" class="form-control" asp-items="ViewBag.Minings"></select>
        <span asp-validation-for="EndMiningId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label">Employee</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
